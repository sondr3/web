---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <main class="relative px-4 sm:px-6 lg:px-8">
    <article>
      <div class="text-lg max-w-prose mx-auto">
        <h1>
          {
            frontmatter.subtitle && (
              <span class="block text-center text-lg font-semibold text-indigo-600 dark:text-indigo-300">
                {frontmatter.subtitle}
              </span>
            )
          }
          <span
            class="mt-2 block text-3xl text-center leading-8 font-bold tracking-tight text-gray-900 dark:text-gray-300 sm:text-4xl"
            >{frontmatter.title}
          </span>
        </h1>
      </div>
      <div class="mt-6 prose prose-indigo prose-lg mx-auto dark:prose-invert">
        <slot />
      </div>
    </article>
  </main>
</Layout>
