{
  "extends": "@sondr3/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "noEmit": true,
    "skipLibCheck": true,
    "module": "esnext",
    "paths": {
      "@/components": ["./components"],
      "@/icons": ["./components/icons"],
      "@/lib/*": ["./lib/*"],
      "@/utils": ["./utils"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
