{
  "extends": "@sondr3/tsconfig",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist"
  },
  "include": ["lib/**/*"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "exclude": ["**/*+(index|.spec).ts", "**/templates/**/*.ts"],
    "theme": "minimal"
  }
}
