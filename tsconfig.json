{
  "extends": "@sondr3/tsconfig",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["**/*.ts", "**/*.svelte"]
}
