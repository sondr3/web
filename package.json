{
  "name": "web",
  "private": true,
  "description": "My website",
  "type": "module",
  "scripts": {
    "build": "tsx src/index.ts -p",
    "check": "tsc --noEmit ",
    "dev": "tsx watch src/index.ts",
    "test": "tsx --test --experimental-test-coverage",
    "test:e2e": "pnpm exec playwright test",
    "biome": "biome check src tests",
    "biome:fix": "biome check --apply src tests",
    "stylelint": "stylelint --cache ./site/styles/**/*",
    "stylelint:fix": "stylelint --fix --cache ./site/styles/**/*",
    "html": "prettier --cache --check ./site/templates/*.html",
    "html:fix": "prettier --cache --write ./site/templates/*.html"
  },
  "author": "Sondre Aasemoen <sondre@eons.io>",
  "license": "WTFPL",
  "prettier": {
    "printWidth": 120
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended",
      "stylelint-config-standard-scss"
    ]
  },
  "dependencies": {
    "@djot/djot": "0.2.5",
    "@parcel/watcher": "2.4.0",
    "date-fns": "3.3.1",
    "debounce": "2.0.0",
    "htmlnano": "2.1.0",
    "lightningcss": "1.23.0",
    "log4js": "6.9.1",
    "meow": "13.2.0",
    "polka": "0.5.2",
    "sass": "1.70.0",
    "shiki": "1.1.1",
    "sirv": "2.0.4",
    "smol-toml": "1.1.4",
    "svgo": "3.2.0",
    "terser": "5.27.0",
    "ws": "8.16.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@playwright/test": "1.41.2",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "20.11.17",
    "@types/polka": "0.5.7",
    "@types/serve-handler": "6.1.4",
    "@types/ws": "8.5.10",
    "prettier": "3.2.5",
    "stylelint": "16.2.1",
    "stylelint-config-standard-scss": "13.0.0",
    "stylelint-prettier": "5.0.0",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@djot/djot@0.2.5": "patches/@djot__djot@0.2.5.patch"
    }
  }
}
