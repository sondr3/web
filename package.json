{
  "name": "eons",
  "private": true,
  "description": "This is my website, held together by tears, glue and a healthy dose of `eh, good enough`.",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch --incremental",
    "build": "tsc",
    "start": "nodemon --watch dist ./site.mjs",
    "test": "mt dist",
    "format": "prettier --check src assets",
    "format:fix": "prettier --write src assets",
    "lint": "eslint --cache src",
    "lint:fix": "eslint --cache --fix src",
    "style": "stylelint --cache assets/scss",
    "style:fix": "stylelint --cache --fix assets/scss"
  },
  "author": "Sondre Nilsen <nilsen.sondre@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sondr3/web/issues"
  },
  "homepage": "https://www.eons.io",
  "dependencies": {
    "@minify-html/js": "0.8.0",
    "@parcel/css": "1.0.0",
    "@parcel/watcher": "2.0.5",
    "asciidoctor": "2.2.5",
    "sass": "1.47.0",
    "serve-handler": "6.1.3",
    "source-map-js": "1.0.1",
    "ws": "8.4.0"
  },
  "devDependencies": {
    "@sondr3/eslint-config": "0.7.1",
    "@sondr3/minitest": "0.1.1",
    "@sondr3/prettier": "0.6.0",
    "@sondr3/stylelint": "0.11.0",
    "@sondr3/tsconfig": "0.7.0",
    "@types/node": "17.0.8",
    "@types/prettier": "2.4.3",
    "@types/sass": "1.43.1",
    "@types/serve-handler": "6.1.1",
    "@types/ws": "8.2.2",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "nodemon": "2.0.15",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "prettier-eslint": "13.0.0",
    "stylelint": "14.2.0",
    "typescript": "4.5.4"
  },
  "prettier": "@sondr3/prettier",
  "stylelint": {
    "extends": [
      "@sondr3/stylelint"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true
    },
    "extends": [
      "@sondr3/eslint-config/typescript"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    }
  }
}
