{
  "name": "web",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "dev": "tsc --watch --incremental",
    "test": "jest",
    "lint:style": "prettier --check lib",
    "lint:code": "eslint lib --cache",
    "lint:css": "stylelint assets/scss/",
    "start": "nodemon --watch lib --ext ts --delay 1 dist/index.js develop -n=debug",
    "build": "node dist/index.js build -p -n=none",
    "serve": "node dist/index.js serve",
    "clean": "node dist/index.js clean",
    "docs": "typedoc",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@minify-html/js": "0.4.11",
    "asciidoctor": "2.2.4",
    "csso": "4.2.0",
    "prettier": "2.3.2",
    "purify-ts": "1.0.0",
    "sass": "1.36.0",
    "source-map": "0.7.3",
    "ts-custom-error": "3.2.0",
    "ws": "7.5.3",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@sondr3/eslint-config": "0.6.0",
    "@sondr3/prettier": "0.5.1",
    "@sondr3/stylelint": "0.10.1",
    "@sondr3/tsconfig": "0.7.0",
    "@types/csso": "4.2.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.3",
    "@types/sass": "1.16.1",
    "@types/ws": "7.4.7",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.1",
    "nodemon": "2.0.12",
    "prettier-eslint": "13.0.0",
    "stylelint": "13.13.1",
    "ts-jest": "27.0.4",
    "typedoc": "0.21.4",
    "typescript": "4.3.5"
  },
  "engines": {
    "node": ">=15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
