{
  "name": "web",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "dev": "tsc --watch --incremental",
    "test": "jest",
    "lint:style": "prettier --check lib",
    "lint:code": "eslint lib",
    "lint:css": "stylelint assets/scss/",
    "start": "nodemon --watch lib --ext ts --delay 1 dist/index.js develop -n=debug",
    "build": "node dist/index.js build -p -n=none",
    "serve": "node dist/index.js serve",
    "clean": "node dist/index.js clean",
    "docs": "typedoc"
  },
  "dependencies": {
    "@minify-html/js": "0.3.10",
    "asciidoctor": "2.2.1",
    "csso": "4.2.0",
    "prettier": "2.2.1",
    "purify-ts": "^0.16.1",
    "sass": "1.32.2",
    "ts-custom-error": "^3.2.0",
    "ws": "7.4.2"
  },
  "devDependencies": {
    "@sondr3/eslint-config": "0.0.1",
    "@sondr3/prettier": "0.3.0",
    "@sondr3/stylelint": "0.7.0",
    "@sondr3/tsconfig": "0.5.0",
    "@types/csso": "3.5.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.20",
    "@types/sass": "1.16.0",
    "@types/ws": "7.4.0",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "7.17.0",
    "eslint-config-prettier": "*",
    "eslint-plugin-functional": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-node": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-simple-import-sort": "*",
    "eslint-plugin-tsdoc": "*",
    "eslint-plugin-unicorn": "*",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.7",
    "prettier-eslint": "*",
    "source-map": "0.7.3",
    "stylelint": "13.8.0",
    "stylelint-config-sass-guidelines": "7.1.0",
    "ts-jest": "26.4.4",
    "typedoc": "0.20.13",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
