{
  "name": "web",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "dev": "tsc --watch --incremental",
    "test": "jest",
    "lint:style": "prettier --check lib",
    "lint:code": "eslint lib --cache",
    "lint:css": "stylelint assets/scss/",
    "start": "nodemon --watch lib --ext ts --delay 1 dist/index.js develop -n=debug",
    "build": "node dist/index.js build -p -n=none",
    "serve": "node dist/index.js serve",
    "clean": "node dist/index.js clean",
    "docs": "typedoc"
  },
  "dependencies": {
    "@minify-html/js": "0.4.1",
    "asciidoctor": "2.2.1",
    "csso": "4.2.0",
    "prettier": "2.2.1",
    "purify-ts": "0.16.1",
    "sass": "1.32.4",
    "source-map": "0.7.3",
    "ts-custom-error": "3.2.0",
    "ws": "7.4.2",
    "yaml": "1.10.0"
  },
  "devDependencies": {
    "@sondr3/eslint-config": "0.3.4",
    "@sondr3/prettier": "0.5.0",
    "@sondr3/stylelint": "0.9.0",
    "@sondr3/tsconfig": "0.7.0",
    "@types/csso": "3.5.1",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.21",
    "@types/sass": "1.16.0",
    "@types/ws": "7.4.0",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-functional": "3.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.10",
    "eslint-plugin-unicorn": "26.0.1",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.7",
    "prettier-eslint": "12.0.0",
    "stylelint": "13.8.0",
    "ts-jest": "26.4.4",
    "typedoc": "0.20.14",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
