{
  "name": "web",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "dev": "tsc --watch --incremental",
    "test": "jest",
    "lint:style": "prettier --check lib",
    "lint:code": "eslint lib",
    "lint:css": "stylelint assets/scss/",
    "start": "NODE_ENV=development NOISINESS=debug nodemon --watch lib --ext ts --delay 1 dist/index.js",
    "build": "NODE_ENV=production NOISINESS=none node dist/index.js",
    "serve": "serve public"
  },
  "dependencies": {
    "asciidoctor": "^2.2.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "html-minifier-terser": "^5.1.1",
    "postcss": "7",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@sondr3/eslint-config-typescript": "0.10.6",
    "@sondr3/prettier": "0.2.1",
    "@sondr3/stylelint": "0.6.0",
    "@sondr3/tsconfig": "0.4.1",
    "@types/cssnano": "^4.0.0",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/jest": "^26.0.14",
    "@types/node": "14.11.8",
    "@types/sass": "^1.16.0",
    "@types/ws": "^7.2.7",
    "eslint": "7.11.0",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "4.3.0",
    "jest": "26.5.3",
    "lint-staged": "10.4.0",
    "nodemon": "^2.0.5",
    "serve": "11.3.2",
    "stylelint": "13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
