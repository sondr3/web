{
  "name": "web",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "dev": "tsc --watch --incremental",
    "test": "jest",
    "lint:style": "prettier --check lib",
    "lint:code": "eslint lib",
    "lint:css": "stylelint assets/scss/",
    "start": "nodemon --watch lib --ext ts --delay 1 dist/index.js develop -n=debug",
    "build": "node dist/index.js build -p -n=none",
    "serve": "node dist/index.js serve",
    "docs": "typedoc"
  },
  "dependencies": {
    "asciidoctor": "^2.2.0",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "html-minifier-terser": "^5.1.1",
    "postcss": "8.2.1",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@sondr3/prettier": "0.2.44",
    "@sondr3/stylelint": "0.6.43",
    "husky": "4.3.6",
    "lint-staged": "10.5.3",
    "serve": "11.3.2",
    "stylelint": "13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
