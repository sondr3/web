{
  "name": "sondr3-web",
  "private": true,
  "workspaces": [
    "plugins/*",
    "sites/*",
    "themes/*"
  ],
  "scripts": {
    "build": "node ./scripts/build.js",
    "serve": "serve --no-clipboard public"
  },
  "devDependencies": {
    "@sondr3/eslint-config-me": "^0.2.1",
    "@sondr3/stylelint": "^0.2.1",
    "@sondr3/tsconfig": "^0.2.0",
    "@types/css-modules": "^1.0.0",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.0",
    "serve": "^11.0.0",
    "stylelint": "^10.0.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
